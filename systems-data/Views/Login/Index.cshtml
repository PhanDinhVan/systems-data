
@{
    ViewBag.Title = "Login";
}

<div class="limiter">
    <div class="container-login100" style="background-image: url('Public/images/bg.jpg');">
        <div class="wrap-login100">
            <form class="login100-form validate-form" action="/Login/PostLogin" method="post">
                <span class="login100-form-logo">
                    @*<i class="zmdi zmdi-landscape"></i>*@
                    <img src="~/Public/images/logo/logo2.png" />
                </span>

                <span class="login100-form-title p-b-34 p-t-27">
                    Log in
                </span>

                <div class="wrap-input100 validate-input" data-validate="Enter username">
                    <input class="input100" type="text" name="USERID" placeholder="Username">
                    <span class="focus-input100" data-placeholder="&#xf207;"></span>
                </div>

                <div class="wrap-input100 validate-input" data-validate="Enter password">
                    <input class="input100" type="password" name="PASSWD" placeholder="Password">
                    <span class="focus-input100" data-placeholder="&#xf191;"></span>
                </div>
                <div class="col-sm-12 padding0">
                    <div class="col-sm-6 padding0">
                        <div class="contact100-form-checkbox">
                            <input class="input-checkbox100" id="ckb1" type="checkbox" name="remember-me">
                            <label class="label-checkbox100" for="ckb1">
                                Remember
                            </label>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="text-right" id="forgot-pass">
                            <a class="txt1" href="#">
                                Forgot Password?
                            </a>
                        </div>
                    </div>
                </div>

                <div class="container-login100-form-btn">
                    <button class="login100-form-btn">
                        Login
                    </button>
                </div>

            </form>
        </div>
    </div>
</div>

<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Public/js/login.js"></script>